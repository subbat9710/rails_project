<div class="row">
  <!--basic info section -->
  <%= form_tag authors_info_path, method: :put do %>
    <%= fields_for :author do |form| %>
    <div class="col-md-6">
      <div class="card">
        <div class="card-block">
          <div class="card-title">
            Basic Info        
          </div>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <%= image_tag(current_author.gravatar_image_url) %>
          </li>
          <li class="list-group-item">
            <div class="field">
              <%= form.label :name %>
              <%= form.text_field :name, value: current_author.name, class: 'form-control' %>
            </div>
          </li>
          <li class="list-group-item">
            <div class="field">
              <%= form.label :email %>
              <%= form.text_field :email, value: current_author.email, class: 'form-control' %>
            </div>
          </li>
          <li class="list-group-item">
            <div class="field">
              <%= form.label :bio %>
              <%= form.text_area :bio, value: current_author.bio,  class: 'form-control' %>
            </div>
          </li>
          <li class="list-group-item">
            <%= form.submit "Update info", class: 'btn btn-primary' %>
          </li>
        </ul>
      </div>
    </div>
    <% end %>
    <% end %>
    <!-- Change password sections -->
    <%= form_tag authors_change_password_path, method: :put do %>
     <%= fields_for :author do |form| %>
    <div class="col-md-6">
      <div class="card">
        <div class="card-block">
          <div class="card-title">
            Change Password      
          </div>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <div class="field">
              <%= form.label :current_password %>
              <%= form.password_field :current_password, class: 'form-control' %>
            </div>
          </li>
          <li class="list-group-item">
            <div class="field">
              <%= form.label :new_password %>
              <%= form.password_field :new_password, class: 'form-control' %>
            </div>
          </li>
          <li class="list-group-item">
            <div class="field">
              <%= form.label :new_password_confirmation %>
              <%= form.password_field :new_password_confirmation, class: 'form-control' %>
            </div>
          </li>
          <li class="list-group-item">
            <%= form.submit "Change Password", class: 'btn btn-warning' %>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <% end %>
 <% end %>
</div>